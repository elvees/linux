/dts-v1/;

#include <dt-bindings/gpio/gpio.h>

#include "mcom03-elvmc03smarc-r1.0-rockpi-n10.dts"

/ {
	panel {
		#address-cells = <1>;
		#size-cells = <0>;
		compatible = "raspberrypi,7inch-dsi";
		backlight = <&panel_reg>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port {
				panel_in: endpoint {
					remote-endpoint = <&bridge_rgb_out>;
				};
			};
		};
	};
};

&i2c0 {
	clock-frequency = <100000>;
	status = "okay";

	panel_reg: regulator@45 {
		compatible = "raspberrypi,7inch-touchscreen-panel-regulator";
		reg = <0x45>;
		gpio-controller;
		#gpio-cells = <2>;
	};
};

&de_dsi {
	status = "okay";

	bridge@0 {
		#address-cells = <1>;
		#size-cells = <0>;
		compatible = "toshiba,tc358762";
		reg = <0>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;

				bridge_in: endpoint {
					remote-endpoint = <&de_dsi_out>;
				};
			};

			port@1 {
				reg = <1>;

				bridge_rgb_out: endpoint {
					remote-endpoint = <&panel_in>;
				};
			};
		};
	};

	ports {
		port@1 {
			reg = <1>;

			de_dsi_out: endpoint {
				remote-endpoint = <&bridge_in>;
			};
		};
	};
};
