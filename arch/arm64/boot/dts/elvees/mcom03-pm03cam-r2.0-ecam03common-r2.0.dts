/dts-v1/;

#include "mcom03-pm03cam-r2.0.dtsi"
#include <dt-bindings/input/input.h>

/ {
	model = "ECAM03COMMON r2.0";
	compatible = "elvees,pm03cam-r2.0-ecam03common-r2.0",
		     "elvees,pm03cam-r2.0",
		     "elvees,mcom03";

	gpio-leds {
		compatible = "gpio-leds";

		red {
			gpios = <&mfbsp1_gpio 8 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		green {
			gpios = <&mfbsp1_gpio 9 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
	};

	gpio-keys {
		compatible = "gpio-keys";

		factory-reset {
			label = "Factory reset";
			gpios = <&gpio0a 7 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	sound {
		compatible = "simple-audio-card";
		simple-audio-card,name = "ECAM03 audio";
		simple-audio-card,format = "i2s";
		simple-audio-card,bitclock-master = <&dailink0_master>;
		simple-audio-card,frame-master = <&dailink0_master>;
		simple-audio-card,aux-devs = <&linein_mic_selector>;
		simple-audio-card,widgets =
			"Microphone", "Microphone Jack",
			"Line", "Line In Jack",
			"Line", "Line Out Jack";
		simple-audio-card,routing =
			"Microphone Jack", "Channel1 IN",
			"MIC1", "Microphone Jack",
			"Microphone Jack", "micbias1",
			"Line In Jack", "Channel2 IN",
			"MIC2", "Line In Jack",
			"Line Out Jack", "LOUTL",
			"Line Out Jack", "LOUTR";

		dailink0_master: simple-audio-card,cpu {
			sound-dai = <&i2s0>;
		};

		simple-audio-card,codec {
			sound-dai = <&rt5616>;
			system-clock-frequency = <12288000>;
		};
	};

	linein_mic_selector: audio-selector {
		compatible = "simple-audio-selector";
		select-gpios = <&gpio0d 2 GPIO_ACTIVE_LOW>;
	};
};

&mfbsp1_gpio {
	status = "okay";

	gpio-line-names = "", "", "", "", "", "", "", "", "GPIO_LEDR", "GPIO_LEDG";
	gpio-reserved-ranges = <0 8>;
};

&uart0 {
	status = "okay";
};

/* Connected to RS-485 transceiver */
&uart3 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&uart3_mux_data &uart3_mux_rs485>;
	linux,rs485-enabled-at-boot-time;
};

&sdhci1 {
	status = "okay";

	/* Disable 1.8V support
	 * Disable SDR50, SDR104 and DDR50 support
	 */
	sdhci-caps-mask = <0x7 0x4000000>;
	sdhci-caps = <0x0 0x0>;
};

&emac0 {
	status = "okay";

	phy-handle = <&ethernet_phy0>;

	reset-gpios = <&gpio0c 6 GPIO_ACTIVE_LOW>;

	ethernet_phy0: ethernet-phy@0 {
		compatible = "ethernet-phy-id0000.011a", "ethernet-phy-ieee802.3-c22";
		reg = <0x0>;

		motorcomm,clk-out-frequency-hz = <0>;
		rx-internal-delay-ps = <1650>;
		tx-internal-delay-ps = <1650>;
	};
};

&i2c1 {
	clock-frequency = <400000>;
	status = "okay";

	adc: adc@48 {
		compatible = "ti,ads1000";
		reg = <0x48>;
		label = "light-sensor";
	};
};

&i2c2 {
	clock-frequency = <400000>;
	status = "okay";

	/* TDB: Inertial Measurement Unit (IMU) QMI8658C */

	rt5616: audio-codec@1b {
		#sound-dai-cells = <0>;
		compatible = "realtek,rt5616";
		reg = <0x1b>;
	};
};

&i2c3 {
	clock-frequency = <400000>;
	status = "okay";

	tmp102@48 {
		compatible = "ti,tmp102";
		reg = <0x48>;
	};
};

&i2s0 {
	status = "okay";

	pinctrl-0 = <&i2s0_default_cfg &i2s0_mux_sdo0
		     &i2s0_mux_sdi0 &i2s0_mux_ext_clk>;

	assigned-clocks = <&lsperiph1_refmux_i2s>;
	assigned-clock-parents = <&i2s0_sclk_in_clk>;
};

&isp {
	status = "okay";
};

&csi0 {
	status = "okay";
};
