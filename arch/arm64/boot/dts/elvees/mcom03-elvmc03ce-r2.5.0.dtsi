/dts-v1/;

#include <dt-bindings/leds/common.h>

#include "mcom03.dtsi"

/ {
	model = "ELV-MC03-CE r2.5.0";
	compatible = "elvees,elvmc03ce-r2.5.0",
		     "elvees,elvmc03ce",
		     "elvees,mcom03";

	elvmc03ce-leds {
		compatible = "gpio-leds";

		rgb-red {
			gpios = <&gpio1d 0 GPIO_ACTIVE_LOW>;
			color = <LED_COLOR_ID_RED>;
			default-state = "off";
		};

		rgb-green {
			gpios = <&gpio1d 1 GPIO_ACTIVE_LOW>;
			color = <LED_COLOR_ID_GREEN>;
			default-state = "off";
		};

		rgb-blue {
			gpios = <&gpio1d 5 GPIO_ACTIVE_LOW>;
			color = <LED_COLOR_ID_BLUE>;
			default-state = "off";
		};

		user-led1 {
			gpios = <&gpio1c 3 GPIO_ACTIVE_LOW>;
			default-state = "on";
			linux,default-trigger = "heartbeat";
		};

		user-led2 {
			gpios = <&gpio1c 4 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
	};

	sdhci0_supply: regulator@0 {
		compatible = "regulator-fixed";
		regulator-name = "sdhci0-supply";
		regulator-min-microvolt = <1800000>;
		regulator-max-microvolt = <1800000>;
		regulator-always-on;
	};

	hdmi_1v2_vdd_supply: regulator@01 {
		compatible = "regulator-fixed";
		regulator-name = "hdmi-vdd-1.2v";
		regulator-min-microvolt = <1200000>;
		regulator-max-microvolt = <1200000>;
		regulator-always-on;
	};

	hdmi_3v3_vcc_supply: regulator@02 {
		compatible = "regulator-fixed";
		regulator-name = "hdmi-vcc-3.3v";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-always-on;
	};

	hdmi_sound: hdmi-sound {
		compatible = "simple-audio-card";
		simple-audio-card,name = "ELV-MC03-CE HDMI Audio";
		simple-audio-card,format = "i2s";
		simple-audio-card,bitclock-master = <&dailink0_master>;
		simple-audio-card,frame-master = <&dailink0_master>;
		simple-audio-card,continuous-clock;
		status = "disabled";

		dailink0_master: simple-audio-card,cpu {
			sound-dai = <&mfbsp0_i2s>;
		};

		simple-audio-card,codec {
			sound-dai = <&lt9611uxc>;
		};
	};
};

&gpio0a {
	gpio-line-names = "I2C0_SMBALERT", "nPCIE_WAKE", "UART3_CTS", "INT_HDMI",
		"INT_ETH", "RTC_INT", "INT_LVDS", "UART3_RTS";
};

&gpio0b {
	gpio-line-names = "UART3_RX", "UART3_TX", "SLEEP#", "",
		"GPIO1", "TPM_PP", "LVDS_BLEN", "SDR_h1v8-l1v5";
};

&gpio0c {
	gpio-line-names = "GPI0", "GPI3", "LVDS_VDD_EN", "GPO1",
		"HDMI_nRST", "LID#", "LVDS_nRST", "RST_ETH#";
};

&gpio0d {
	gpio-line-names = "SUS_STAT#", "BATLOW#", "SUS_S4#", "I2C0_SCL",
		"I2C0_SDA", "GPI2", "SUS_S3#", "SUS_S5#";
};

&gpio1a {
	gpio-line-names = "I2C_CK", "I2C_DAT", "I2C2_SCL", "I2C2_SDA",
		"I2C3_SCL", "I2C3_SDA", "WAKE1#", "THRM#";
};

&gpio1b {
	gpio-line-names = "I2S_CLK", "I2S_WS", "I2S_SDO", "I2S_RST#",
		"I2S_SDI", "USB_HUB_RST#", "GPIO2", "GPIO0";

	reset-usb-vl817-hub-hog {
		gpio-hog;
		gpios = <5 GPIO_ACTIVE_HIGH>;
		output-high;
	};
};

&gpio1c {
	gpio-line-names = "SPI_SCK", "SPI_MOSI", "SPI_MISO", "nUSER_LED1",
		"nUSER_LED2", "SPI_CS#", "GPI1", "SATA_PERST";
};

&gpio1d {
	gpio-line-names = "nLED-R", "nLED-G", "LVDS_BLT_CTRL", "SPKR",
		"FAN_PWMOUTp", "nLED-B", "FAN_TACHINp", "THRMTRIP#";
};

/* Connected to eMMC */
&sdhci0 {
	status = "okay";

	non-removable;
	bus-width = <8>;

	vqmmc-supply = <&sdhci0_supply>;
};

&qspi0 {
	status = "okay";

	flash0: s25fl128s@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor", "spi-flash";
		reg = <0x0>;
		/* This is the highest frequency at which all commands are
		 * supported by the flash device.
		 */
		spi-max-frequency = <66000000>;
		m25p,fast-read;
	};
};

&i2c2 {
	clock-frequency = <400000>;
	status = "okay";

	bl5372: rtc@32 {
		compatible = "ricoh,rs5c372a";
		reg = <0x32>;
	};

	tmp112: temperature-sensor@48 {
		compatible = "ti,tmp112";
		reg = <0x48>;
	};

	bl24c32a: eeprom@50 {
		compatible = "microchip,24c32", "atmel,24c32";
		reg = <0x50>;
	};

	lt9611uxc: hdmi-bridge@2b {
		status = "disabled";

		lontium,dsi-mode-video-burst;
		lontium,dsi-clock-non-continuous;

		compatible = "lontium,lt9611uxc";
		reg = <0x2b>;

		vdd-supply = <&hdmi_1v2_vdd_supply>;
		vcc-supply = <&hdmi_3v3_vcc_supply>;
		#sound-dai-cells = <0>;

		reset-gpios = <&gpio0c 4 GPIO_ACTIVE_HIGH>;
		interrupts-extended = <&gpio0a 3 IRQ_TYPE_EDGE_FALLING>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;
				lt9611_in_p0: endpoint {
					remote-endpoint = <&dsi_out>;
				};
			};
		};
	};
};

&de_dsi {
	dsi-min-clock-frequency = <275000000>;
	status = "disabled";

	ports {
		port@1 {
			reg = <1>;
			dsi_out: endpoint {
				remote-endpoint = <&lt9611_in_p0>;
			};
		};
	};
};

&media_ucg1 {
	assigned-clocks = <&media_ucg1 CLK_MEDIA_UCG1_DISP_A>,
			  <&media_ucg1 CLK_MEDIA_UCG1_DISP_M>;
	assigned-clock-rates = <594000000 297000000>;
};

/* PCIe0 is connected to SATA controller. */
sata: &pcie0 { };
